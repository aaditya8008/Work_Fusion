<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:cardCornerRadius="15dp"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#dcf0e3"
    app:cardElevation="30dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/snoemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:padding="8dp"
            android:text="S.No.: 1"
            android:textSize="18.25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/descriptionEmp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/baseline_subject_24"
            android:drawablePadding="2dp"
            android:padding="8dp"
            android:text="Manage app layout and integrate it to backened"
            android:textSize="18.25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

        <TextView
            android:id="@+id/startDateemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/baseline_date_range_24"
            android:drawablePadding="2dp"
            android:padding="8dp"
            android:text="24/12/24"
            android:textSize="18.25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/descriptionEmp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/snoemp" />

        <TextView
            android:id="@+id/endDateemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/baseline_calendar_month_24"
            android:drawablePadding="2dp"
            android:padding="8dp"
            android:text="1/1/25"
            android:textSize="18.25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/descriptionEmp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinnerEmptask" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="status"
            android:textSize="18.25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/spinnerEmptask"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/spinnerEmptask"
            android:layout_width="100dp"
            android:layout_height="41dp"
            android:padding="8dp"
            android:spinnerMode="dropdown"
            android:scrollbarSize="18.25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/status" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="To"
            android:textSize="18.25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/endDateemp"
            app:layout_constraintStart_toEndOf="@+id/startDateemp"
            app:layout_constraintTop_toBottomOf="@+id/status" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/updateButton"
            android:background="@drawable/button_rectangle_lightblue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="UPDATE"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/descriptionEmp"
            app:layout_constraintStart_toStartOf="@+id/descriptionEmp"
            app:layout_constraintTop_toBottomOf="@+id/descriptionEmp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>